<link href="https://fonts.googleapis.com/css?family=Charm&display=swap" rel="stylesheet">

<link rel="stylesheet" type="text/css" href="/css/timeline.css">

<!-- The Timeline -->
<div class="ui segment" id="imagecontent" >


<ul class="timeline">

  {{#each articles }} <br>
  <li>
    {{#if even }}
    <div class="direction-r">
      {{else }}
      <div class="direction-l">
        {{/if }}
        <div class="flag-wrapper">
          <span class="flag">{{ title }}</span>
          <span class="time-wrapper">
            <span class="time">
              {{ ratification }}
            </span>
          </span>
          
        </div>
        <div class="desc">{{ summary }} </div>
         <img class="ui card" src="/img/{{ image }}.png" height="200px" width="250px" alt="alt">
       
  </li>
  {{/each}}

</ul>
</div>