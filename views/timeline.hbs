<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic'
  rel='stylesheet' type='text/css'>
<link rel="stylesheet" type="text/css" href="/css/timeline.css">

<!-- The Timeline -->
<div id="imagecontent" >


<ul class="timeline">

  {{#each articles }} <br>
  <li>
    {{#if even }}
    <div class="direction-r">
      {{else }}
      <div class="direction-l">
        {{/if }}
        <div class="flag-wrapper">
          <span class="flag">{{ title }}</span>
          <span class="time-wrapper">
            <span class="time">
              {{ ratification }}
            </span>
          </span>
          
        </div>
        <div class="desc">{{ summary }} </div>
         <img class="ui circular image" src="/img/{{ image }}.png" height="200px" width="250px" alt="alt">
       
  </li>
  {{/each}}

</ul>
</div>